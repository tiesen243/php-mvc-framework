{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "tiesen243/php-mvc-framework",
  "version": "0.0.1",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Yuki\\": "src/",
      "App\\": "app/"
    }
  },
  "require": {
    "nikic/fast-route": "^1.3"
  },
  "scripts": {
    "dev:app": "php -S localhost:8000 -t public",
    "dev:tailwind": "node_modules/.bin/tailwindcss -i src/styles/globals.css -o public/css/globals.css --watch",
    "dev": "node_modules/.bin/concurrently \"composer dev:app\" \"composer dev:tailwind\""
  }
}
